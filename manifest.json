{
  "manifest_version": 2,
  "name": "Mercado Livre Plus",
  "description": "Extens√£o para Google Chrome que melhora a listagem de produtos no Mercado Livre.",
  "version": "0.0.0.4",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "jquery-3.2.0.min.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mercadolivre.com.br/*"
      ],
      "js": [
        "jquery-3.2.0.min.js",
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.mercadolivre.com.br/*"
  ]
}